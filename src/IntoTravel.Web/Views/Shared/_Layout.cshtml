                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="~/gear">Gear</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/contact">Contact</a>
                    </li>

                  
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('@ViewData["HeaderPhotoUrl"]')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    <div class="site-heading">

                        @if (ViewData["SiteHeading"] == null)
                        {
                            <h1>Into Travel</h1>
                        }
                        else
                        {
                            <h1>@ViewData["SiteHeading"]</h1>
                        }



                        @if (ViewData["SiteSubHeading"] == null)
                        {
                            <i class="subheading">A travel photography blog by Ryan</i>
                        }
                        else if (ViewData["SiteSubHeading"].ToString() == string.Empty)
                        {

                        }
                        else
                        {
                            <i class="subheading">@ViewData["SiteSubHeading"]</i>
                        }





                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <div class="container">

        @RenderBody()

      
    </div>
    <hr>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    @{ await Html.RenderPartialAsync("_LoginPartial"); }
                    <ul class="list-inline text-center">
