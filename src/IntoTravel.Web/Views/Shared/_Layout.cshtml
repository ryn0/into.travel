    <!-- Temporary navbar container fix -->
    <style>
    .navbar-toggler {
        z-index: 1;
    }

    @@media (max-width: 576px) {
        nav > .container {
            width: 100%;
        }
    }
    </style>
    @RenderSection("StylesHeader", required: false)

    @RenderSection("ScriptsHeader", required: false)

    @Html.Raw(JavaScriptSnippet.FullScript)

    
