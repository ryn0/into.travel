    <!-- Custom scripts for this template -->
    <script src="~/js/clean-blog.min.js"></script>

    @if (!Context.Request.IsMobileBrowser())
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.1.1/ekko-lightbox.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.1.1/ekko-lightbox.min.js.map"></script>


        <script>
                    $(document).on('click', '[data-toggle="lightbox"]', function (event) {
                        event.preventDefault();
                        $(this).ekkoLightbox();
                    });
            </script>
    }

    @{ await Html.RenderPartialAsync("_GoogleAnalyticsPartial"); }

    @RenderSection("ScriptsFooter", required: false)
</body>
</html>
